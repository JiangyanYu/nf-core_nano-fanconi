/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline fa_niva.

    Use as follows:
        nextflow run jiangyanyu/nf-core_nano-Fanconi -profile fa_niva,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Fanconi profile'
    config_profile_description = 'Analyze fanconi nanopore dataset'

    // Input data for minimal size test
    input                      = "${baseDir}/assets/samplesheet.csv"

    // Genome reference
    fasta                      = "/data/genmedbfx/ref/GRCh38_GIABv3_no_alt_analysis_set_maskedGRC_decoys_MAP2K3_KMT2C_KCNJ18.fasta"
    fasta_index                = "/data/genmedbfx/ref/GRCh38_GIABv3_no_alt_analysis_set_maskedGRC_decoys_MAP2K3_KMT2C_KCNJ18.fasta.fai"
    
    //annotsv annotation direcoty
    annotsvAnnotationsDir      = "/data/genmedbfx/ref/annosv/"
    
    dorado_model               = 'dna_r10.4.1_e8.2_400bps_sup@v5.0.0'
    dorado_files_chunksize     = 10000
    dorado_modifications_model = ''
    reads_format               = 'bam'
    }

    profiles {
        GRCh38 {
            config_profile_name        = 'GRCh38 profile'
            config_profile_description = 'Analyze nanopore datasets with GRCh38 reference'
            fasta                      = "https://ftp-trace.ncbi.nlm.nih.gov/ReferenceSamples/giab/release/references/GRCh38/GRCh38_GIABv3_no_alt_analysis_set_maskedGRC_decoys_MAP2K3_KMT2C_KCNJ18.fasta.gz"
        }
        GRCh37 {
            config_profile_name        = 'GRCh37 profile'
            config_profile_description = 'Analyze nanopore datasets with GRCh37 reference'
            fasta                      = "s3://ngi-igenomes/igenomes/Homo_sapiens/UCSC/hg19/Sequence/WholeGenomeFasta/genome.fa"
        }
    }
